<p id="notice"><%= notice %></p>

<h1>Listing Catregories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @catregories.each do |catregory| %>
      <tr>
        <td><%= catregory.name %></td>
        <td><%= link_to 'Show', catregory %></td>
        <td><%= link_to 'Edit', edit_catregory_path(catregory) %></td>
        <td><%= link_to 'Destroy', catregory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Catregory', new_catregory_path %>
